	<title> Make a Rating to the Owner </title>
	<script src="javascripts/paymentScript.js"></script>

</head>

<body>
	<div class="container">
		<form id="payment_form" method="post" class="form-horizontal" role="form" action="makeRating">
			<input name="bid", id="bid", type="hidden", value="<%=bid%>">
			<div class="form-group">
				<label for="ctRating" class="col-sm-3 control-label">Rating to the Owner</label>
				<div class="col-sm-6">
					<input type="number" step="1" min = "0" max = "5" id="ctRating" name="ctRating" placeholder="Rating to the Owner" class="form-control" autofocus>
				</div>
			</div>
			<div class="form-group">
				<label for="ocomment" class="col-sm-3 control-label">Your Comment to the Owner</label>
				<div class="col-sm-6">
					<textarea rows = "5" cols = "50" id="ocomment" name="ocomment" class="form-control" placeholder="Max 2000 characters"></textarea>
				</div>
			</div>
			<div class="row justify-content-center">
				<button class="btn btn-primary btn-block col-md-8" type="submit">
					Make Rating
				</button>
			</div>
		</form>
		<script>
			(function() {
				window.addEventListener('load', function() {
					var forms = [document.getElementById('payment_form')];
					var validation = Array.prototype.filter.call(forms, function(form) {
						form.addEventListener('submit', check, false);
					});
				}, false);
			})();
		</script>
		<a href="/dashboard">
			<div class="row justify-content-center">
				<button class="btn btn-primary btn-block col-md-8">Cancel</button>
			</div>
		</a>
	</div>
</body>
</html>